block variables
doctype html
html
    head
        title #{title} | ExpenseMan.app
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="Manage your income and expenses with ExpenseMan")
        meta(name="author" content="BlueMoonDevelopment")
        meta(name="keywords" content="expense, income, account, manage, moneymanagement")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color", content="#ffffff")

        meta(property="og:type" content="website")
        meta(property="og:url" content="https://expenseman.app")
        meta(property="og:title" content="ExpenseMan")
        meta(property="og:description" content="Manage your income and expenses with ExpenseMan")
        meta(property="og:image" content="https://expenseman.app/img/banner/banner-1280x640.png")

        script(src="https://use.fontawesome.com/releases/v6.2.1/js/all.js")

        link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
        link(rel="manifest" href="/site.webmanifest")
        link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")

        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700")
        link(rel="stylesheet" href="/css/mystyles.css")
        link(rel="stylesheet" href="/css/design.css")
        link(rel="stylesheet" href="/lib/to-top/material-scrolltop.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css")

    body
        section.hero.is-fullheight
            .hero-head
                nav.navbar.is-primary
                    .container
                        .navbar-brand
                            a.navbar-item(href="/")
                                img(alt="Logo" src="/img/logo/transparent-bg/expenseman-logo-transparent-with-symbol.png" sizes="124x124")
                            span.navbar-burger.burger(data-target="navbarMenu")
                                span
                                span
                                span
                        .navbar-menu#navbarMenu
                            .navbar-start
                                a.navbar-item(href="/imprint")
                                    p Imprint
                                a.navbar-item(href="https://github.com/BlueMoonDevelopment" target="_blank")
                                    p GitHub
                                a.navbar-item(href="https://bluemoondev.org/discord" target="_blank")
                                    p Discord
                        .navbar-end
                            .buttons
                                if loggedin
                                    a.navbar-item.button.is-warning.is-light(href="/auth/signout")
                                        p Sign out
                                else
                                    a.navbar-item.button.is-primary.is-light(href="/auth")
                                        p Sign in/up

            .hero-body
                .container.has-text-centered
                    block layout-content
            footer.footer
                .hero.foot
                    .level
                        .level-left
                            p Â© 2022 BlueMoonDevelopment
                        .level-right
                            .columns
                                .column
                                    a(href="https://github.com/BlueMoonDevelopment" target="_blank")
                                        button.button.is-link.is-rounded
                                            span.icon
                                                i.fab.fa-github
                                            span BlueMoonDevelopment
                                .column
                                    a(href="https://github.com/BlueMoonDevelopment/expenseman-web" target="_blank")
                                        button.button.is-link.is-rounded
                                            span.icon
                                                i.fab.fa-github
                                            span Source Code
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false")
        script(src="/lib/to-top/material-scrolltop.js")
        script(src="/js/scripts.js")

        button.material-scrolltop(type="button")
        script.
            $('body').materialScrollTop();
